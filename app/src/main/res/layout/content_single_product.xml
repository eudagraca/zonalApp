<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_sold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vender"
            android:visibility="gone"
            android:paddingEnd="40dp"
            android:paddingStart="40dp"
            android:layout_gravity="end"
            android:textSize="16sp"
            style="@style/primaryButton"/>

        <TextView
            android:id="@+id/tv_price_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            tools:text="$14"
            android:layout_marginEnd="40dp"
            android:maxLines="1"
            android:textSize="@dimen/sub_header_text"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_title_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_medium"
            tools:text="Laptop"
            android:layout_marginEnd="30dp"
            android:textSize="@dimen/more_medium_text"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/material_grey100" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_regular"
            tools:text="One category"
            android:textColor="@color/material_grey700"
            android:textSize="@dimen/medium_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/material_grey100" />

        <TextView
            android:id="@+id/tv_description_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_regular"
            tools:text="One more and more Description plus plus plus "
            android:textColor="@color/material_grey700"
            android:textSize="@dimen/more_medium_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingEnd="20dp"
            android:paddingStart="0dp"
            android:drawableStart="@drawable/ic_rounded_rectangle"
            android:drawablePadding="8dp"
            android:gravity="center"
            tools:text="5"
            android:textSize="@dimen/more_medium_text" />


        <TextView
            android:id="@+id/tv_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_heart"
            android:drawablePadding="8dp"
            android:gravity="center"
            tools:text="5"
            android:textSize="@dimen/more_medium_text" />

        <TextView
            android:id="@+id/tv_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:drawableStart="@drawable/ic_eye"
            android:drawablePadding="8dp"
            android:gravity="center"
            tools:text="12"
            android:textSize="@dimen/more_medium_text" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <com.google.android.material.card.MaterialCardView
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:elevation="0dp">

            <ImageView
                android:id="@+id/iv_profileImage_prod_details"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@drawable/background"
                android:contentDescription="Dono do produto" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvOwnProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/material_black"
                android:fontFamily="@font/montserrat_medium"
                tools:text="Euclídio da Graça"
                android:textSize="@dimen/medium_text" />

            <TextView
                android:id="@+id/tv_location_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:drawableStart="@drawable/ic_pin"
                android:drawablePadding="8dp"
                android:fontFamily="@font/montserrat_regular"
                tools:text="Euclídio da Graça"
                android:textSize="@dimen/normal_text" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>