<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/material_grey900</item>
        <item name="android:textColorSecondary">@color/material_grey600</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="editTextBackground">@color/material_black</item>
        <item name="editTextColor">@color/material_black</item>
    </style>

    <style name="InputEditText" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/material_grey400</item>
        <item name="android:textColorPrimary">@android:color/transparent</item>
        <item name="boxBackgroundColor">@color/material_white</item>
        <item name="errorTextAppearance">@color/material_redA200</item>
        <item name="android:textSize">16sp</item>
        <!-- The color of the label -->
        <item name="android:colorError" tools:targetApi="o">@color/material_redA200</item>
        <!--the color of text-->
        <item name="android:textColor">@color/material_grey700</item>
        <item name="colorAccent">@color/material_black</item>
    </style>

    <style name="MyHintStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/material_black</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:height">60dp</item>
        <item name="android:elevation">0dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:shadowColor">@color/material_white</item>
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Base.ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.DetailsRoundedImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
<!--        <item name="android:onClick">openAlbum</item>-->
    </style>

    <style name="AppTheme.DetailsRoundedImageViewForm">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerCrop</item>
<!--        <item name="android:onClick">openAlbum</item>-->
    </style>

</resources>
